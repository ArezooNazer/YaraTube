<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".ui.login.loginoption.LoginOptionFragment"
    tools:layout_editor_absoluteY="25dp">


    <ProgressBar
        android:id="@+id/loginProgressbar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/iran_sans"
            android:text="ورود"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/loginViaPhoneNumber"
                android:layout_width="260dp"
                android:layout_height="48dp"
                android:layout_marginBottom="22dp"
                android:background="@color/colorPrimary"
                android:drawableRight="@drawable/ic_smartphone"
                android:fontFamily="@font/iran_sans"
                android:paddingRight="10dp"
                android:text="از طریق شماره موبایل"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/loginViaGoogle"
                android:layout_width="260dp"
                android:layout_height="48dp"
                android:background="@drawable/ic_shape"
                android:fontFamily="@font/iran_sans"
                android:paddingRight="22dp"
                android:text="از طریق حساب گوگل"
                android:textColor="@color/white" />

        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>