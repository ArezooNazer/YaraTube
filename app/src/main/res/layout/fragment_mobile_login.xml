<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.phonenumberlogin.PhoneNumberFragment"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="21dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="21dp"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/iran_sans"
            android:text="ورود از طریق شماره موبایل"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/mobileNumberET"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="21dp"
            android:fontFamily="@font/iran_sans"

            android:hint="شماره موبایل خود را وارد کنید"
            android:textSize="16dp"
            android:layoutDirection="ltr"/>

        <Button
            android:id="@+id/sendMobileNumberBut"
            android:layout_width="260dp"
            android:layout_height="48dp"
            android:background="@drawable/round_blue_border_blue_back"
            android:fontFamily="@font/iran_sans"
            android:text="ثبت"
            android:textColor="@color/white" />


    </LinearLayout>

</FrameLayout>