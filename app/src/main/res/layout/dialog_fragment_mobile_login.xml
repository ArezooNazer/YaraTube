<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.login.MobileLoginDialogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="21dp"
            android:fontFamily="@font/iran_sans"
            android:text="ورود از طریق شماره موبایل"
            android:textSize="18dp"
            android:layout_marginTop="11dp"/>

        <EditText
            android:id="@+id/mobileNumberET"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="21dp"
            android:fontFamily="@font/iran_sans"
            android:hint="شماره موبایل خود را وارد کنید"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/sendMobileNumberBut"
            android:layout_width="260dp"
            android:layout_height="48dp"
            android:background="@drawable/round_border_fill"
            android:fontFamily="@font/iran_sans"
            android:text="ثبت"
            android:textColor="@color/white" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>